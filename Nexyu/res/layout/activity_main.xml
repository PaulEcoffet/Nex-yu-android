<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/infoText"
        style="@style/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_marginTop"
        android:layout_centerHorizontal="true"
        android:text="@string/infoUI" />

    <Button
        android:id="@+id/ConnectBut"
        style="@style/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoText"
        android:layout_centerHorizontal="true"
        android:text="@string/connect_to_the_comp" />

    <CheckBox
        android:id="@+id/autoConnection"
        style="@style/autoConnectCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ConnectBut"
        android:layout_below="@id/ConnectBut"
        android:layout_marginTop="7dp"
        android:text="@string/ask_autoConnection" />

</RelativeLayout>